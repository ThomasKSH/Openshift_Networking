
{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "hello-pod-1",
        "labels": {
            "name": "hello-openshift"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "hello-pod-container-1",
                "image": "openshift/hello-openshift",
                "ports": [
                    {
                        "containerPort": 8080,
                        "protocol": "TCP"
                    }
                ]
            }
        ]
    
    }
}


{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "hello-service"
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 8080,
                "targetPort": 8080
            }
        ],
        "selector": {
            "name": "hello-openshift"
        }
        
    }
}
