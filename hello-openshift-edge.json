{
  "kind": "Service",
  "apiVersion": "v1",
  "metadata": {
    "name": "hello-service"
  },
  "spec": {
    "selector": {
      "name":"hello-openshift"
    },
    "ports": [
      {
        "port": 8080,
        "targetPort": 8080
      }
    ]
  }
}


{
  "kind": "Pod",
  "apiVersion":"v1beta3",

  "metadata": {
  	"name": "hello-pod-1",
  	"labels": {
    		"name": "hello-openshift"
  	}
  },

  "spec": {
      "containers": [{
        "name": "hello-pod-container-1",
        "image": "openshift/hello-openshift",
        "ports": [
          {
            "containerPort": 8080
          }
        ]
      }]
  }
}

{
  "kind": "Pod",
  "apiVersion":"v1beta3",

  "metadata": {
  	"name": "hello-pod-2",
  	"labels": {
    		"name": "hello-openshift"
  	}
  },

  "spec": {
      "containers": [{
        "name": "hello-pod-container-2",
        "image": "openshift/hello-openshift",
        "ports": [
          {
            "containerPort": 8080
          }
        ]
      }]
  }
}
