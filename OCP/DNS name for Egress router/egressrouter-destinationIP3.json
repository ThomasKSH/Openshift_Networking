apiVersion: v1
kind: Pod
metadata:
  name: egress-redirect
  labels:
    name: egress-redirect
  annotations:
    pod.network.openshift.io/assign-macvlan: "true"
spec:
  initContainers:
  - name: egress-router-setup
    image: openshift3/ose-egress-router
    securityContext:
      privileged: true
    env:
    - name: EGRESS_SOURCE
      value: 172.17.0.2
    - name: EGRESS_GATEWAY
      value: 172.17.0.1
    - name: EGRESS_DESTINATION 
      value: 69.172.200.235
    - name: EGRESS_ROUTER_MODE
      value: init
  containers:
  - name: egress-redirect
    image: openshift3/ose-egress-router
    securityContext:
      privileged: true
    
