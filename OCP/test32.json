{
    "kind": "Route",
    "apiVersion": "v1",
    "metadata": {
        "name": "route-1",
        "labels": {
            "select": "first",
            "test": "router"
        }
    },
    "spec": {
        "host": "hello-openshift.com",
        "to": {
            "kind": "Service",
            "name": "endpoints",
            "weight": 100
        },
        "tls": {
            "insecureEdgeTerminationPolicy": "Allow",
            "termination": "edge"
            
       }
    }
}

{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "endpoints",
        "labels": {
            "test": "router"
        }
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 8080,
                "targetPort": 8080
            }
        ],
        "selector": {
            "endpoints": "router",
            "test": "router"
        }
    }
}
{
   "kind":"Pod",
   "apiVersion":"v1",
   "metadata":{
      "name":"endpoint-1",
      "labels":{
         "endpoints": "router",
         "test": "router"
      }
   },
   "spec":{
      "containers":[
         {
            "name":"test",
            "image":"openshift/hello-openshift",
            "ports":[
               {
                  "containerPort":8080
               },
               {
                  "containerPort":443
               }
            ]
         }
      ]
   }
}
