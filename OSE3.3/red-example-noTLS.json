{
  "kind": "List",
  "apiVersion": "v1",
  "metadata": {
    "name": "hello-service-complete-example"
  },
  "items": [
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "red-route",
        "labels": {
          "name": "red-route"
        }
      },
      "spec": {
        "host": "red.example.com",
        "to": {
          "kind": "Service",
          "name": "red-service"
        }
      }
    },
    
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "red-service"
      },
      "spec": {
        "selector": {
          "name": "red-openshift"
        },
        "ports": [
          {
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080
          }
        ]
      }
    },
    {
      "kind": "Pod",
      "apiVersion": "v1",
      "metadata": {
        "name": "red-pod",
        "labels": {
          "name": "red-openshift"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "red-pod-container",
            "image": "openshift/hello-openshift",
            "env": [
            { "name": "RESPONSE",
               "value": "Hello Red Example"
          }
        ],
            "ports": [
              {
                "containerPort": 8080
              },
              {
                "containerPort": 443
              }
            ]
          }
        ]
      }
    }
  ]
}
