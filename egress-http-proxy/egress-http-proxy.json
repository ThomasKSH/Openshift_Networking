apiVersion: v1
kind: Pod
metadata:
  name: egress-http-proxy
  labels:
    name: egress-http-proxy
  annotations:
    pod.network.openshift.io/assign-macvlan: "true" 
spec:
  initContainers:
  - name: egress-router-setup
    securityContext:
      privileged: true
    env:
    - name: EGRESS_SOURCE 
      value: 192.168.122.140
    - name: EGRESS_GATEWAY 
      value: 192.168.122.1
    - name: EGRESS_ROUTER_MODE 
      value: http-proxy
  containers:
  - name: egress-router-proxy
    env:
    - name: EGRESS_HTTP_PROXY_DESTINATION 
      value: |
        !*.redhat.com
        !98.138.0.0/24
        !69.172.200.235
        !www.cisco.com
        *
