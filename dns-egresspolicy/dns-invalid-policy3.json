 {
    "kind": "EgressNetworkPolicy",
    "apiVersion": "v1",
    "metadata": {
        "name": "policy1"
    },
    "spec": {
        "egress": [
            {
                "type": "Allow",
                "to": {
                    "dnsName": "www.redhat.com"
                }
            },
            {
                "type": "Deny",
                "to": {
                    "dnsName": "*.baidu.com"
                }
            }
        ]
    }
}
