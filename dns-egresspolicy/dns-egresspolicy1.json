{
    "kind": "EgressNetworkPolicy",
    "apiVersion": "v1",
    "metadata": {
        "name": "policy-test"
    },
    "spec": {
        "egress": [
            {
                "type": "Allow",
                "to": {
                    "dnsName": "www.cisco.com"
                }
            },
            {
                "type": "Deny",
                "to": {
                  "dnsName": "www.apple.com"
                }
            }
        ]
    }
}
