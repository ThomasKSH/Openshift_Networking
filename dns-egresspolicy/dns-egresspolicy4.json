{
    "kind": "EgressNetworkPolicy",
    "apiVersion": "v1",
    "metadata": {
        "name": "policy-test"
    },
    "spec": {
        "egress": [       
            {
                "type": "Deny",
                "to": {
                     "dnsName": "www.pod2.com"
                }
            },
            {
                "type": "Allow",
                "to": {
                    "cidrSelector": "0.0.0.0/0"
                }
            }
        ]
    }
}
