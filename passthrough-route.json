{
    "kind": "Route",
    "apiVersion": "v1",
    "metadata": {
        "name": "hello-route",
        "labels": {
            "name": "hello-route-1"
        }
    },
    "spec": {
        "host": "hello-openshift.com",
        "to": {
            "kind": "Service",
            "name": "hello-service"
        },
        "tls": { "termination": "passthrough"}
    }
}



{
  "kind": "Service",
  "apiVersion": "v1",
  "metadata": {
    "name": "hello-service"
  },
  "spec": {
    "selector": {
      "name":"hello-openshift"
    },
    "ports": [
      {
        "protocol": "TCP",
        "port": 443,
        "targetPort": 443
      }
    ]
  }
}


{
  "kind": "Pod",
  "apiVersion":"v1beta3",

  "metadata": {
  	"name": "hello-pod-1",
  	"labels": {
    		"name": "hello-openshift"
  	}
  },

  "spec": {
      "containers": [{
        "name": "hello-pod-container-1",
        "image": "openshift/hello-openshift",
        "ports": [
          {
            "containerPort": 80
          },
          {
            "containerPort": 443
          }
        ]
      }]
  }
}

{
  "kind": "Pod",
  "apiVersion":"v1beta3",

  "metadata": {
  	"name": "hello-pod-2",
  	"labels": {
    		"name": "hello-openshift"
  	}
  },

  "spec": {
      "containers": [{
        "name": "hello-pod-container-2",
        "image": "openshift/hello-openshift",
        "ports": [
          {
            "containerPort": 80
          },
          {
            "containerPort": 443
          }
        ]
      }]
  }
}
