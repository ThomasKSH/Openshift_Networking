{
    "kind": "Route",
    "apiVersion": "v1",
    "metadata": {
        "name": "route-secure",
    },
    "spec": {
        "host": "www.example.com",
        "to": {
            "kind": "Service",
            "name": "hello-nginx-https"
        },
        "tls": {
            "termination": "passthrough"
        }
    }
}


{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "hello-nginx-https",
    },
    "spec": {
        "ports": [
            {
                "name": "http",
                "protocol": "TCP",
                "port": 27443,
                "targetPort": 443
            }
        ],
        "selector": {
            "name": "hello-nginx-docker"
        }
    }
}



